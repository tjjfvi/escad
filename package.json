{
  "name": "escad",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "lerna exec 'rm -rf node_modules package-lock.json'; lerna bootstrap --hoist; patch-package",
    "test": "npm run quick-build && jest -u",
    "quick-build": "tsc -b packages",
    "build-playground": "lerna run build-for-playground; lerna run build-playground",
    "build": "npm run bootstrap; npm run index; npm run quick-build",
    "force-build": "lerna run clean; npm run build",
    "index": "create-index -X ts -x ts -x tsx -Sui packages/ -c {}",
    "lint": "eslint '**/*.{ts,tsx}' --quiet --fix",
    "open-coverage": "open coverage/lcov-report/index.html"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "create-index-better": "^1.4.4",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "patch-package": "^6.2.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "private": true
}