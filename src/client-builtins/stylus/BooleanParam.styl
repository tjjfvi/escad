
.BooleanParam .checkbox
  width 35px
  height 35px

  input
    position absolute
    left -1000vw
    top -1000vw
  div
    display inline-flex
    width 35px
    height 35px
    border-radius 5px
    border 3px solid $darkgrey
    cursor pointer
    position relative
    transition background-color .2s
    justify-content center
    align-items center

    &:before
      content "âœ“"
      color $white
      font-size 25px
      border-radius 5px
      opacity 0
      transition opacity .2s
    &:hover:before
      opacity .1
  input:checked + div
    &:before
      opacity 1
