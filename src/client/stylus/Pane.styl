
.Pane
  flex 1

  overflow hidden

  display flex

  background $black

  &.left
    flex-direction row-reverse
  &.right
    flex-direction row

  font-weight normal

  .border
    min-width 5px
    max-width 5px
    background-color $darkgrey

  &.resizable .border
    cursor ew-resize

  .side
    color $grey
    cursor pointer
    min-width 45px
    max-width 45px
    font-size 30px
    display flex
    flex-direction column
    align-items center
    justify-content center
    font-weight lighter

  &.left .side span
    transform unquote("rotate(90deg)")

  &.right .side span
    transform unquote("rotate(-90deg)")

  transition max-width 1s

  &.resizing
    transition none

  .content > .Loading:only-child
    --size 75px
    left 50%
    top 50%
    transform translate(-50%, -50%)
    color $grey
