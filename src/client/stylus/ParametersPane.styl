    display flex
    justify-content space-between
    align-items center

    margin-left 5px
    margin-top 10px

    .NameDesc
      display flex
      flex-direction column
      justify-content center
      align-items flex-start
      min-height 45px

      margin-left 10px

      .name
        font-size 20px
        color $lightgrey
