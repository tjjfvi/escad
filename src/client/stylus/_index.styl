@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,700');

colors = {
  black:     #151820,
  darkgrey:  #252830,
  grey:      #454850,
  lightgrey: #656870,
  white:     #bdc3c7,
  red:       #c0392b,
  orange:    #d35400,
  yellow:    #f1c40f,
  green:     #2ecc71,
  blue:      #0984e3,
  purple:    #8e44ad,
}

for prop, val in colors
  define("$" + prop, val);

prefix(prop)
  -webkit-{prop} slice(arguments, 1)
  -moz-{prop} slice(arguments, 1)
  -ms-{prop} slice(arguments, 1)
  {prop} slice(arguments, 1)

colorClasses(prop="color")
  for class, val in colors
    &.{class}
      {prop} val

applyFont()
  font-family "Roboto", sans-serif

*
  box-sizing border-box !important

  &:focus
    outline 0

  &:not(input)
    prefix user-select none

*:before
*:after
  box-sizing border-box !important

body, html
  background-color $black
  color $white
  margin 0
  padding 0
  overflow hidden
  width 100%
  height 100%

#root
  applyFont()
  width 100%
  height 100%
  display flex

body
  display flex
  justify-content center
  align-items center

::-webkit-scrollbar
        width 10px
        background-color $black

::-webkit-scrollbar-button
        display none

::-webkit-scrollbar-track-piece
        background-color $darkgrey
        border 2px solid $black
        border-radius 100px

::-webkit-scrollbar-thumb
        height 50px
        background-color $grey
        border 2px solid $black
        border-radius 100px
