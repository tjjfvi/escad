
.DisplayPane
  padding 0
  display inline-block
  flex 1
  position relative

  &.loading
    display inline-flex
    align-items center
    justify-content center

    > .Loading
      --size 100px
      color $grey

  &.none
    display flex
    align-items center
    justify-content center
    flex-direction: column
    color $lightgrey
    & .header
      font-size 20px

  .menubar
    position absolute
    left 0px
    top 0px

    display flex
    flex-direction row
    align-items flex-end

    transform unquote("translate(0, -100%)")

    > div
      display flex
      flex-direction column

      transform unquote("translate(0, 50px)")
      transition transform .5s

      margin-left -5px

      &:hover
        transform unquote("translate(0, 100%)")

      span
        display inline-flex
        align-items center
        justify-content center
        width 150px
        height 50px
        color $lightgrey
        background $black
        border 5px solid $darkgrey
        border-width 0 5px 5px 5px
        font-size 20px
        cursor pointer

      &:last-child span:last-child
        border-radius 0 0 10px 0