
.DisplayPane
  padding 0
  display inline-block
  flex 1
  position relative

  &.loading
    display inline-flex
    align-items center
    justify-content center

    > .Loading
      --size 100px
      color $grey

  &.none
    display flex
    align-items center
    justify-content center
    flex-direction: column
    color $lightgrey
    & .header
      font-size 20px

  .menubar
    position absolute
    left 0px
    top 0px

    display flex
    flex-direction row
    align-items flex-end

    transform unquote("translate(0, -100%)")

    > div
      display flex
      flex-direction column

      transform unquote("translate(0, 50px)")
      transition transform .5s

      margin-left -5px

      &:hover
        transform unquote("translate(0, 100%)")

      span
        display inline-flex
        align-items center
        justify-content center
        width 150px
        height 50px
        color $lightgrey
        background $black
        border 5px solid $darkgrey
        border-width 0 5px 5px 5px
        font-size 20px
        cursor pointer

      &:last-child span:last-child
        border-radius 0 0 10px 0
  .Stats
    position absolute
    display inline-flex
    flex-direction column
    width 350px
    height 350px
    bottom 0px
    left 0px
    background-color $black
    border 0 solid $darkgrey
    border-width 5px 5px 0 0
    border-top-right-radius 10px
    transform translate(0px, 100%) translate(0px, -50px)
    transition transform 1s

    &.open
      transform translate(0px, 0px) translate(0px, 0px)

    > span
      width 100%
      height 48px
      color $lightgrey
      font-size 20px
      display flex
      justify-content center
      align-items center
      border-bottom 3px solid $darkgrey
      cursor pointer
    
    > .content
      display flex
      flex-direction column
      overflow-y auto
      height 300px
      > .stat
        display flex
        position relative
        height 30px
        > span
          display flex
          width 50%
          padding 5px
        > span:first-child
          justify-content flex-end
          padding-right 2.5px
          color $lightgrey
        > span:last-child
          justify-content flex-start
          padding-left 2.5px
          color $white
        &:not(:first-child)
          border-top 1px solid $darkgrey
        & .Loading
          color $lightgrey
          --size 30px