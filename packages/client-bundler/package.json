{
  "name": "@escad/client-bundler",
  "version": "0.0.0",
  "description": "",
  "main": "dist/bundler.js",
  "types": "dist/bundler.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "force-build": "npm run clean; tsc",
    "hash": "find bundler.ts -type f -print0 | sort -z | xargs -0 openssl dgst -sha256 | openssl dgst -sha256 > .hash",
    "changed": "touch .hash; mv .hash old.hash; npm run hash; cmp old.hash .hash >/dev/null 2>&1",
    "build": "npm run changed && echo 'Skipping build' || npm run force-build; rm old.hash",
    "prepack": "npm run force-build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@escad/server-renderer-messages": "^0.0.0",
    "commander": "^5.1.0",
    "fs-extra": "^9.0.0",
    "node-watch": "^0.6.4",
    "read-pkg-up": "^7.0.1",
    "stylus": "^0.54.7",
    "tsee": "^1.3.0",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.13",
    "@types/stylus": "^0.48.32",
    "@types/webpack": "^4.41.17",
    "typescript": "^3.9.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
