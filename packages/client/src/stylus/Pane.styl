
.Pane
  flex 1
  max-width 50px

  display flex

  background $black
  border 0px solid $darkgrey

  > div
    min-width 450px

  &.left
    border-right-width 5px
    flex-direction row-reverse
  &.right
    border-left-width 5px
    flex-direction row

  color $grey

  font-weight normal

  .side
    cursor pointer
    min-width 45px
    max-width 45px
    font-size 30px
    display flex
    flex-direction column
    align-items center
    justify-content center
    font-weight lighter
    border 0px solid $darkgrey

  &.left .side span
    transform rotate(90deg)

  &.right .side span
    transform rotate(-90deg)

  transition max-width 1s

  &.open
    max-width 500px
