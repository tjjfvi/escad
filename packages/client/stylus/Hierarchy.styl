
.Hierarchy
  > div.content
    overflow auto

    display flex
    flex-direction column

    flex-grow 1

    &:after
      content ""
      height 100px
      flex 0 0 auto

.TreeNode
  font-family Inconsolata, monospace

  display flex
  flex-direction column

  .line
    display flex
    flex-direction row
    align-items center

    height 25px
    font-size 20px
    color $lightgrey

    .ellipsis
      position relative
      letter-spacing -.25em
      padding-right .25em

    .openable
      position relative
      opacity .5
      .openable
        opacity 1
      &.hover
        text-decoration underline
        text-decoration-style dotted
        text-decoration-thickness 1px
        text-decoration-color $white
        text-underline-position from-font

    .link.hover
      border-bottom 1px solid $white

    &:hover
      background-color $darkgrey

    .arrow
      display flex
      justify-content center
      align-items center
      flex 0 0 auto

      width 25px
      height 25px

      &:before
        content ""
        width 10px
        height 10px
        border 0px solid $lightgrey
        border-right-width 1px
        border-bottom-width 1px
        transform unquote("rotate(45deg) translate(-2.5px, -2.5px)")
      &.closed:before
        transform unquote("rotate(-45deg) translate(-2.5px, -2.5px)")
      &.leaf:before
        border-right-width 0px
        transform unquote("translate(0, -5px)")

    span
      flex 1 0 auto

    .expand
      display flex
      align-items center
      justify-content center
      opacity 0
      flex 0 0 25px
      svg
        fill $grey
        max-height 100%

    &:hover .expand
      opacity 1


  .children
    display flex
    flex-direction column

    margin-left 12px
    padding-left 12px
    border-left 1px solid $grey
