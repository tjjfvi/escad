
.NumberParam
  display flex
  margin-left 5px

  input
    display inline-block
    width 100%
    height 40px
    border 3px solid $darkgrey
    border-radius 5px 0px 0px 5px
    border-right none
    background-color transparent
    font-size 20px
    font-family inherit
    text-align center
    color $white
    transition border-color .2s

  &.invalid
    input
    .incDec *
      border-color $red

  & .incDec
    display flex
    flex-direction column

    div
      display flex
      justify-content center
      align-items center

      width 20px
      height 20px

      border 3px solid $darkgrey
      border-left-width 2px

      cursor pointer

      margin 0px

      font-size 20px

      transition color.2s, border-color .2s

      &:hover
        color $grey

    .inc
      border-bottom-width 1px
      border-top-right-radius 5px

      &:before
        content "+"

    .dec
      border-top-width 1px
      border-bottom-right-radius 5px

      &:before
        content "-"


